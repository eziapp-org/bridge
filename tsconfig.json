{
    "compilerOptions": {
        "target": "ES2021", // 支持现代浏览器特性
        "module": "ESNext", // 浏览器支持原生 ESM
        "moduleResolution": "Bundler", // 适配 Vite、esbuild 等现代打包器
        "lib": [
            "ES2021",
            "DOM"
        ], // 加载浏览器 API（如 window、fetch）
        "outDir": "dist", // 输出目录
        "rootDir": ".", // 源码根目录
        "strict": true, // 启用所有严格类型检查
        "esModuleInterop": true, // 支持默认导入 CommonJS 模块
        "resolveJsonModule": true, // 支持导入 JSON 文件
        "declaration": true, // 生成类型声明文件
        "skipLibCheck": true, // 跳过依赖库类型检查
        "forceConsistentCasingInFileNames": true, // 文件名大小写一致性
        "allowSyntheticDefaultImports": true, // 支持默认导入
        "allowJs": false, // 不编译 JS 文件
        "noEmit": false // 允许输出编译结果
    },
    "include": [
        "index.ts"
    ], // 只编译入口文件
    "exclude": [
        "node_modules",
        "dist"
    ] // 排除构建输出和依赖
}